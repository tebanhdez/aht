{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization":false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "exclude": [
    "node_modules", "**/*.test.ts", "**/*.spec.ts"
  ]
}